{
  // Details: https://github.com/victorporof/Sublime-JSHint#using-your-own-jshintrc-options
  // Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
  // Documentation: http://www.jshint.com/docs/p
  "browser": true,
  "esnext": true,
  "globals": {
    "DIY": true
  },
  "onevar": true,
  "curly" : true,
  "noarg" : true,
  "globalstrict": false,
  "quotmark": "single",
  "smarttabs": false,
  "trailing": false,
  "undef": true,
  "unused": true,
  "maxdepth": 2,
  "nonew" : true,
  "noempty" : true,
  "newcap" : true,
  "bitwise" : true,
  "forin" : true,
  "camelcase" : true,
  "latedef" : true,
  "immed" : true,
  "maxparams": 3,
  "eqeqeq": true,
  "jasmine": true,
  "sub": false,
  "maxcomplexity": 10,
  "shadow": "outer",
  "maxlen": 100,
  "freeze": true
}
